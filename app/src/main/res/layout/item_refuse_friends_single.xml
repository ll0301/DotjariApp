<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cl_refuseFriendsProfile"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_myFriends_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="아이디"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_myFriends_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_myFriends_email"
        app:layout_constraintTop_toTopOf="@+id/tv_myFriends_email" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_fiber_new_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_myFriends_name"
        app:layout_constraintStart_toEndOf="@+id/tv_myFriends_name"
        app:layout_constraintTop_toTopOf="@+id/tv_myFriends_name" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/myfriend_profilePic"
        android:layout_width="50dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_my_photo_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_myFriends_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/myfriend_profilePic"
        app:layout_constraintTop_toTopOf="@+id/myfriend_profilePic" />

    <TextView
        android:id="@id/tv_myFriends_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="@string/error_invalid_email"
        app:layout_constraintStart_toStartOf="@+id/tv_myFriends_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_myFriends_name" />

    <TextView
        android:id="@+id/tv_myFirends_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="STATUS"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_myFriends_name"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>