<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_myFriends_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_myFriends_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="아이디"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_myFriends_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_myFriends_email"
        app:layout_constraintTop_toTopOf="@+id/tv_myFriends_email" />

    <ImageView
        android:id="@+id/singleStar"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_star"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/myfriend_profilePic"
        app:layout_constraintEnd_toEndOf="@+id/myfriend_profilePic"
        app:layout_constraintStart_toStartOf="@+id/myfriend_profilePic" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_fiber_new_black_24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_myFriends_name"
        app:layout_constraintStart_toEndOf="@+id/tv_myFriends_name"
        app:layout_constraintTop_toTopOf="@+id/tv_myFriends_name" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/myfriend_profilePic"
        android:layout_width="50dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_my_photo_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_myFriends_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/myfriend_profilePic"
        app:layout_constraintTop_toTopOf="@+id/myfriend_profilePic" />

    <TextView
        android:id="@+id/tv_myFriends_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="user Email"
        android:textColor="#8B8B8B"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_myFriends_name"
        app:layout_constraintStart_toEndOf="@+id/tv_myFriends_name" />

    <TextView
        android:id="@+id/tv_myFriends_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="User Status"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/tv_myFriends_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_myFriends_name" />


</android.support.constraint.ConstraintLayout>